<h1>Limericks</h1>

<div class="row row-cols-1 row-cols-lg-2 g-4">

  <% @limericks.each do |l| %>
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= l.title %></h5>
        <p class="card-text" style="white-space: pre-line"><%= l.limerick_text %></p>
        <p class="card-text"><small class="text-muted">By <%= l.author.email %></small></p>
      </div>
    </div>
  </div>
  <% end %>

</div>
